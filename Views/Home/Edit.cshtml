@model TsmContactDirectory.Models.Contact

@{
    ViewData["Title"] = "Edit Contact";
}

<div class="p-2">
    <h3>Edit Contact</h3>
</div>

<form name="ContactForm" asp-action="Edit" class="p-3">
    <input type="hidden" asp-for="Id" />
    <div class="col-12 row form-group">
        <div class="col-6">
            <label asp-for="FirstName" class="required"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="LastName" class="required"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 row form-group">
        <div class="col-6">
            <label asp-for="Phone" class="required"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Email" class="required"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-12 row form-group">
        <div class="col-6">
            <a asp-action="Index" role="button" class="btn btn-outline-dark"> Back to List </a>
            <a class="btn btn-outline-danger ml-3"
               data-toggle="modal"
               data-target="#DeleteModal"
               data-contact-id="@Model.Id"
               data-contact-name="@Model.FirstName @Model.LastName"> Delete Contact </a>
        </div>

        <div class="col-6 text-right">
            <input type="submit" value="Update Contact" class="text-right btn btn-success">
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
